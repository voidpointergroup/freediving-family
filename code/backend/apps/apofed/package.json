{
    "name": "apofed",
    "main": "index.js",
    "staticFiles": {
        "staticPath": []
    },
    "scripts": {
        "codegen:protoc:bus": "rm -rf ./src/__generated__/proto/bus && mkdir -p ./src/__generated__/proto/bus/ts && protoc -I ../../libs --plugin ./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out ./src/__generated__/proto/bus/ts ../../libs/bus/*.proto",
        "codegen": "npm-run-all codegen:**",
        "build:graphql": "npx ncc build -m src/graphql/index.ts -o ./dist/graphql --target es2020",
        "build": "npm-run-all build:**"
    },
    "dependencies": {
        "@apollo/federation": "^0.38.1",
        "@apollo/gateway": "^2.0.0",
        "apollo-server": "^3.6.4",
        "graphql": "^16.3.0",
        "js-base64": "^3.7.2",
        "jsonwebtoken": "^9.0.0",
        "jwks-rsa": "^3.0.0",
        "nats": "^2.10.2",
        "yaml": "^2.2.1"
    },
    "devDependencies": {
        "@types/node": "^18.13.0",
        "@vercel/ncc": "^0.36.1",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.2.0",
        "ts-proto": "^1.136.1",
        "ttypescript": "^1.5.12",
        "typescript": "^4.3.5"
    }
}